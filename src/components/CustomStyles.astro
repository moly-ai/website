---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* MonaKit-inspired tea-house color palette */
    --tea-main: oklch(12.9% 0.042 264.7);
    --tea-secondary: oklch(60% 0.04 264.7);
    --tea-light: oklch(27.9% 0.041 260.031);

    /* Theme accent colors */
    --nebula-accent: oklch(58.7% 0.196 162.64);
    --solar-accent: oklch(68.3% 0.196 37.26);
    --cosmic-accent: oklch(58.7% 0.196 302.64);

    /* Core colors */
    --aw-color-primary: var(--tea-secondary);
    --aw-color-secondary: var(--tea-light);
    --aw-color-accent: var(--tea-main);

    /* Text colors */
    --aw-color-text-heading: rgb(15 23 42);
    --aw-color-text-default: rgb(30 41 59);
    --aw-color-text-muted: rgb(71 85 105);

    /* Background colors */
    --aw-color-bg-page: rgb(239 246 255);
    --aw-color-bg-card: rgb(255 255 255);
    --aw-color-bg-border: rgb(226 232 240);

    /* Dark mode preview (for light mode) */
    --aw-color-bg-page-dark: var(--tea-main);

    ::selection {
      background-color: var(--tea-light);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* MonaKit dark theme foundation */
    --aw-color-bg-page: rgb(2 6 23); /* slate-950 */
    --aw-color-bg-card: rgb(15 23 42); /* slate-900 */
    --aw-color-bg-border: rgb(30 41 59); /* slate-800 */

    /* Text colors for high contrast */
    --aw-color-text-heading: rgb(248 250 252); /* slate-50 */
    --aw-color-text-default: rgb(226 232 240); /* slate-200 */
    --aw-color-text-muted: rgb(148 163 184); /* slate-400 */

    /* MonaKit-inspired tea-house palette for dark mode */
    --tea-main: oklch(12.9% 0.042 264.7);
    --tea-secondary: oklch(60% 0.04 264.7);
    --tea-light: oklch(27.9% 0.041 260.031);

    /* Theme accent colors */
    --nebula-accent: oklch(58.7% 0.196 162.64);
    --solar-accent: oklch(68.3% 0.196 37.26);
    --cosmic-accent: oklch(58.7% 0.196 302.64);

    /* Core colors */
    --aw-color-primary: var(--tea-secondary);
    --aw-color-secondary: var(--tea-light);
    --aw-color-accent: var(--tea-main);

    ::selection {
      background-color: var(--tea-secondary);
      color: var(--aw-color-bg-page);
    }
  }

  /* Theme variants for sections */
  .nebula-theme {
    --aw-color-primary: var(--nebula-accent);
    --aw-color-accent: var(--nebula-accent);
  }

  .solar-theme {
    --aw-color-primary: var(--solar-accent);
    --aw-color-accent: var(--solar-accent);
  }

  .cosmic-theme {
    --aw-color-primary: var(--cosmic-accent);
    --aw-color-accent: var(--cosmic-accent);
  }

  /* MonaKit-inspired fluid typography */
  h1,
  .text-4xl,
  .text-5xl,
  .text-6xl {
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  h2,
  .text-3xl {
    font-size: clamp(1.5rem, 4vw, 3rem);
    line-height: 1.2;
    letter-spacing: -0.01em;
  }

  h3,
  .text-2xl {
    font-size: clamp(1.25rem, 3vw, 2rem);
    line-height: 1.3;
  }

  h4,
  .text-xl {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    line-height: 1.4;
  }

  .text-lg {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    line-height: 1.5;
  }

  .text-base {
    font-size: clamp(0.875rem, 1.5vw, 1rem);
    line-height: 1.6;
  }

  .text-sm {
    font-size: clamp(0.75rem, 1.25vw, 0.875rem);
    line-height: 1.5;
  }

  /* Enhanced heading styles */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: 700;
    font-family: var(--aw-font-heading);
    background: linear-gradient(135deg, var(--aw-color-text-heading) 0%, var(--aw-color-text-default) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .dark h1,
  .dark h2,
  .dark h3,
  .dark h4,
  .dark h5,
  .dark h6 {
    background: linear-gradient(135deg, var(--aw-color-text-heading) 0%, var(--aw-color-text-default) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Decorative elements - disabled to remove lines between title and subtitle */
  /* h1::after, h2::after {
    content: '';
    display: block;
    width: 3rem;
    height: 3px;
    background: linear-gradient(90deg, var(--aw-color-primary) 0%, var(--aw-color-accent) 100%);
    margin-top: 1rem;
    border-radius: 2px;
  } */

  /* Body text enhancements */
  p,
  .prose p {
    font-family: var(--aw-font-serif);
    color: var(--aw-color-text-default);
    line-height: 1.7;
    margin-bottom: 1.25rem;
  }

  /* Link styles */
  a {
    color: var(--aw-color-primary);
    text-decoration: none;
    position: relative;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--aw-color-accent);
  }

  /* Exclude button-style links from animated underline effect */
  a:not([class*='btn']):not([class*='inline-flex'])::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--aw-color-primary) 0%, var(--aw-color-accent) 100%);
    transition: width 0.3s ease;
  }

  a:not([class*='btn']):not([class*='inline-flex']):hover::after {
    width: 100%;
  }
</style>
