---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),

  id,
  bg = await Astro.slots.render('bg'),

  // Advanced options
  enableAnimatedBackground = true,
  enableScrollingTags = true,
  tags = [],
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose overflow-hidden" {...id ? { id } : {}}>
  <!-- Enhanced Animated Background -->
  {enableAnimatedBackground && (
    <div class="absolute inset-0 overflow-hidden">
      <!-- Grid Pattern -->
      <div class="absolute inset-0 bg-grid opacity-10 dark:opacity-5"></div>

      <!-- Animated Gradient Orbs -->
      <div class="absolute top-0 left-0 w-96 h-96 bg-primary/20 rounded-full blur-3xl animate-float gradient-animation"></div>
      <div class="absolute top-1/2 right-0 w-80 h-80 bg-accent/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-0 left-1/3 w-64 h-64 bg-secondary/20 rounded-full blur-3xl animate-float" style="animation-delay: 4s;"></div>

      <!-- Additional subtle orbs -->
      <div class="absolute top-1/3 left-1/4 w-32 h-32 bg-nebula/10 rounded-full blur-xl animate-pulse-slow"></div>
      <div class="absolute bottom-1/3 right-1/3 w-24 h-24 bg-solar/10 rounded-full blur-xl animate-pulse-slow" style="animation-delay: 3s;"></div>
      <div class="absolute top-2/3 left-2/3 w-20 h-20 bg-cosmic/10 rounded-full blur-xl animate-pulse-slow" style="animation-delay: 1.5s;"></div>
    </div>
  )}

  <!-- Scrolling Tags -->
  {enableScrollingTags && tags && tags.length > 0 && (
    <div class="absolute top-20 left-0 right-0 z-10 overflow-hidden">
      <div class="flex space-x-4 animate-scroll-tags">
        {tags.map((tag, index) => (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/10 backdrop-blur-md border border-white/20 text-white/80 hover:bg-white/20 hover:text-white transition-colors whitespace-nowrap cursor-pointer">
            {tag.icon && <span class="mr-1">{tag.icon}</span>}
            {tag.text}
          </span>
        ))}
        {/* Duplicate tags for seamless scrolling */}
        {tags.map((tag, index) => (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/10 backdrop-blur-md border border-white/20 text-white/80 hover:bg-white/20 hover:text-white transition-colors whitespace-nowrap cursor-pointer">
            {tag.icon && <span class="mr-1">{tag.icon}</span>}
            {tag.text}
          </span>
        ))}
      </div>
    </div>
  )}

  <!-- Existing background slot -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>

  <!-- Hero Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20">
      <div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
        {
          tagline && (
            <p
              class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-slide-up"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-5xl md:text-7xl font-bold leading-tighter tracking-tighter mb-6 font-heading dark:text-gray-200 text-gradient intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-scale-in"
              style="animation-delay: 200ms;"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-xl text-muted mb-8 dark:text-slate-300 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-slide-up"
                style="animation-delay: 400ms;"
                set:html={subtitle}
              />
            )
          }
          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-slide-up" style="animation-delay: 600ms;">
                {Array.isArray(actions) ? (
                  actions.map((action, index) => (
                    <div class="flex w-full sm:w-auto" style="animation-delay: `${600 + index * 100}ms`;">
                      <Button {...(action || {})} class="w-full sm:mb-0 btn-accent shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>

      <!-- Enhanced Image Container -->
      <div
        class="intersect-once intersect-no-queue intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-scale-in"
        style="animation-delay: 800ms;"
      >
        {
          image && (
            <div class="relative m-auto max-w-5xl">
              {/* Glow effect behind image */}
              <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-accent/20 rounded-2xl blur-2xl scale-110 animate-pulse-slow"></div>

              {/* Image with glassmorphism frame */}
              <div class="relative glass-card rounded-2xl p-1">
                {typeof image === 'string' ? (
                  <Fragment set:html={image} />
                ) : (
                  <Image
                    class="mx-auto rounded-xl w-full"
                    widths={[400, 768, 1024, 2040]}
                    sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                    loading="eager"
                    width={1024}
                    height={576}
                    {...image}
                  />
                )}
              </div>

              {/* Decorative corner elements */}
              <div class="absolute -top-2 -left-2 w-8 h-8 border-t-2 border-l-2 border-primary rounded-tl-lg animate-pulse-slow"></div>
              <div class="absolute -top-2 -right-2 w-8 h-8 border-t-2 border-r-2 border-accent rounded-tr-lg animate-pulse-slow" style="animation-delay: 1s;"></div>
              <div class="absolute -bottom-2 -left-2 w-8 h-8 border-b-2 border-l-2 border-secondary rounded-bl-lg animate-pulse-slow" style="animation-delay: 2s;"></div>
              <div class="absolute -bottom-2 -right-2 w-8 h-8 border-b-2 border-r-2 border-primary rounded-br-lg animate-pulse-slow" style="animation-delay: 3s;"></div>
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* Enhanced floating animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) translateX(0px) scale(1);
    }
    25% {
      transform: translateY(-20px) translateX(10px) scale(1.05);
    }
    50% {
      transform: translateY(-10px) translateX(-10px) scale(0.95);
    }
    75% {
      transform: translateY(-30px) translateX(5px) scale(1.02);
    }
  }

  /* Smooth scrolling for tags */
  @keyframes scrollTags {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Enhanced gradient animation */
  @keyframes gradient {
    0%, 100% {
      background-position: 0% 50%;
      transform: scale(1) rotate(0deg);
    }
    25% {
      background-position: 50% 25%;
      transform: scale(1.1) rotate(90deg);
    }
    50% {
      background-position: 100% 50%;
      transform: scale(0.9) rotate(180deg);
    }
    75% {
      background-position: 50% 75%;
      transform: scale(1.05) rotate(270deg);
    }
  }

  /* Pause scrolling on hover */
  .animate-scroll-tags:hover {
    animation-play-state: paused;
  }

  /* Enhanced glow effects */
  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .dark .glass-card {
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Parallax effect for background orbs */
  .parallax-element {
    will-change: transform;
  }
</style>